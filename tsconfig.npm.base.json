{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": false,
    "declaration": true,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "typeRoots": ["node_modules/@types"],
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "strict": true,
    "paths": {
      "*": ["libs/shared/types/src/lib/*"],
      "@island.is/island-ui/contentful": [
        "libs/island-ui/contentful/src/index.ts"
      ],
      "@island.is/island-ui/core": ["libs/island-ui/core/src/index.ts"],
      "@island.is/shared/connected": ["libs/shared/connected/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
