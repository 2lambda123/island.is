{
  "compilerOptions": {
    "target": "es2018",
    "module": "commonjs",
    "importHelpers": true,
    "noEmit": true,
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "types": ["node", "jest", "detox", "@testing-library/jest-native", "@testing-library/react-native"]
  },
  "include": [
    "src/*.ts",
    "src/*.tsx"
  ]
}
